# Configuration pour les tests E2E

# URL de base de l'application en développement
PLAYWRIGHT_TEST_BASE_URL=http://localhost:5173

# Credentials de test (à remplacer par des vrais si nécessaire)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123

# Tokens de test
TEST_AUTH_TOKEN=test_auth_token_123

# Configuration des timeouts
TEST_TIMEOUT=30000
TEST_EXPECT_TIMEOUT=5000

# Mode headless
HEADLESS=true

# Reporters
PLAYWRIGHT_REPORTER=html

# Configuration du débogage
DEBUG=false
TRACE=on-first-retry
